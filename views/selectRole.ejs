<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/accets/css/dashboard.css" />
    <title>Candidate Profile</title>
    <style>
      body {
        display: flex;
        margin: 0;
        font-family: Arial, sans-serif;
      }

      #left-menu {
        width: 200px;
        background-color: #f0f0f0;
        padding: 10px;
      }

      #left-menu ul {
        list-style-type: none;
        padding: 0;
      }

      #left-menu li {
        margin-bottom: 10px;
      }

      #left-menu a {
        text-decoration: none;
        color: #333;
        font-weight: bold;
      }

      #left-menu a:hover {
        color: #4caf50;
      }

      #content {
        flex: 1;
        padding: 10px;
      }

      h1 {
        color: #333;
      }

      #profile-image {
        max-width: 200px;
        max-height: 200px;
        border-radius: 50%;
      }

      form {
        max-width: 600px;
      }

      label {
        display: block;
        margin-top: 10px;
        color: #333;
      }

      input {
        width: 100%;
        padding: 8px;
        margin-bottom: 15px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
      }

      button {
        background-color: #4caf50;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

      button:hover {
        background-color: #45a049;
      }

      input[type="file"] {
        margin-top: 5px;
      }

      #content a {
        color: #3498db;
      }

      #content a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <div id="left-menu">
      <ul>
        <li><a href="/profile">Profile</a></li>
        <li><a href="/job-portal">Job Portal</a></li>
        <li><a href="/my-jobs">My Jobs</a></li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </div>
    <div id="content">
      <h1>Select Your Role</h1>
      <form action="/job-portal" method="post">
        <label for="selectedRole">Select Role:</label>
        <select id="selectedRole" name="selectedRole">
          <% jobRoles.forEach(role => { %>
          <option value="<%= role.name %>"><%= role.name %></option>
          <% }); %>
        </select>
        <br />
        <button type="submit">Add to My jobs</button>
      </form>
    </div>
  </body>
</html>
